<!DOCTYPE html>
<html>
    <head>
        <title>{{ title }}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <!-- Bootstrap 5 CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
        <!-- Bootstrap Icons -->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
        <!-- Google Fonts -->
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="catalog/view/theme/default/stylesheet/bpos.css">
        
        <!-- Daterangepicker CSS -->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.css">

        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/busy-load/dist/app.min.css">

        
    </head>
    <body>
        <div class="wrap">
            <header class="header container-fluid d-flex align-items-center px-3">
                <div class="logo me-2">B</div>
                <div class="title me-auto">POS System</div>

                <div class="search position-relative me-3 d-none d-md-block">
                    <i class="bi bi-search position-absolute"></i>
                    <input id="pos-search" type="text" class="form-control ps-5" placeholder="Find Products">
                </div>

                <div class="head-actions d-flex align-items-center gap-2">
                    <button class="icon-btn" title="Notifications"><i class="bi bi-bell"></i></button>
                    <button class="icon-btn" title="Settings"><i class="bi bi-gear"></i></button>
<!--                    <button class="icon-btn" title="Theme"><i class="bi bi-moon"></i></button>-->
<!--                    <button class="pill invisible">New Goal</button>-->
                </div>
            </header>

            <div class="d-flex">
                <div class="col-auto d-none d-md-block" id="left-menu">
                    <div class="sidebar  d-flex flex-column align-items-center">
                        <div class="home bubble active"><i class="bi bi-house"></i></div>
                        <div class="invoices bubble"><i class="bi bi-receipt"></i></div>
                        <div class="orders bubble"><i class="bi bi-box"></i></div>
                        <div class="statistics bubble"><i class="bi bi-graph-up"></i></div>
                        <div class="bubble"><i class="bi bi-gear"></i></div>
                    </div>
                </div>
                <div id="main-content" class="container-fluid py-3">{{ content|raw }}</div>

                <!-- Mobile sidebar -->
                <div class="d-md-none mt-3" id="mobile-menu">
                    <div class="sidebar d-flex justify-content-between">
                        <div class="home bubble active"><i class="bi bi-house"></i></div>
                        <div class="invoices bubble"><i class="bi bi-receipt"></i></div>
                        <div class="orders bubble"><i class="bi bi-box"></i></div>
                        <div class="statistics bubble"><i class="bi bi-graph-up"></i></div>
                        <div class="bubble"><i class="bi bi-gear"></i></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal fade" id="productOptionModal" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <!-- AJAX load here -->
                </div>
            </div>
        </div>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/busy-load/dist/app.min.js"></script>
        <!-- Moment.js -->
        <script src="https://cdn.jsdelivr.net/npm/moment@2.29.4/min/moment.min.js"></script>

        <!-- Daterangepicker JS -->
        <script src="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.min.js"></script>
        <script src="catalog/view/javascript/bpos.js"></script>

    </body>
</html>
